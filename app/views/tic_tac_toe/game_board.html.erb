<h1>Welcome to TicTacToe!</h1>

<h2>It is player <%= @current_player %>'s turn!</h2>

<p>
  Enter your selection using the form below
</p>

<!-- Render Board -->
<pre>
  <table>
    <% 3.times do |row| %>
      <tr> 
        <% 3.times do |cell| %>
          <td>-</td>
        <% end %>
      </tr>
    <% end %>
  </table>
</pre>

<!-- Render Form -->
<%= form_tag(make_move_path, :method => "POST") do %>
  <table>
    <% 3.times do |row| %>
      <tr> 
        <% 3.times do |cell| %>
          <td>
            <%= radio_button_tag("choice","#") %>
          </td>
        <% end %>
      </tr>
    <% end %>
  </table>
  <%= submit_tag "Make Move" %>
<% end %>